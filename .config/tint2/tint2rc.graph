# Tint2 config file
# tint2rc_dzen

# Background definitions
# ID 1 For panel
rounded = 0
border_width = 0
background_color = #333333 100
border_color = #d0d0d0 60

# ID 2 for tasks
rounded = 0
border_width = 0
background_color = #777777 0
border_color = #444444 0

# ID 3 for active tasks
rounded = 0
border_width = 0
background_color = #101010 100
border_color = #eeeeee 0

# Panel
panel_monitor = all
panel_position = bottom
panel_size = 100% 20
panel_margin = 0 0
panel_padding = 5 0 0
panel_dock = 0
wm_menu = 0
panel_layer = top
panel_background_id = 1
panel_items = LTGSC
# G is for graphs, if appropriate patch is applied

# Panel Autohide
autohide = 0
autohide_show_timeout = 0.3
autohide_hide_timeout = 2
autohide_height = 2
strut_policy = follow_size

# Launchers
launcher_background_id = 0
launcher_item_app = /usr/share/applications/dwb.desktop

# Taskbar
taskbar_mode = single_desktop
taskbar_padding = 5 0 5
taskbar_background_id = 0
taskbar_active_background_id = 0
taskbar_name = 0

# Tasks
urgent_nb_of_blink = 8
task_icon = 1
task_text = 1
task_centered = 1
task_maximum_size = 130 20
task_padding = 10 0
task_background_id = 2
task_active_background_id = 3
task_urgent_background_id = 3
task_iconified_background_id = 2
task_tooltip = 1

# Task Icons
task_icon_asb = 70 0 0
task_active_icon_asb = 100 0 0
task_urgent_icon_asb = 100 0 0
task_iconified_icon_asb = 70 0 0

# Fonts
task_font = droid sans 8
task_font_color = #b0b0b0 70
task_active_font_color = #b0b0b0 100
task_urgent_font_color = #C23131 90
task_iconified_font_color = #b0b0b0 70
font_shadow = 0

# Tooltips
tooltip_padding = 2 2
tooltip_show_timeout = 0.7
tooltip_hide_timeout = 0.3
tooltip_background_id = 1
tooltip_font = dejavu sans 9
tooltip_font_color = #ffffff 80

# Mouse
mouse_middle = none
mouse_right = none # desktop_right
mouse_scroll_up = toggle
mouse_scroll_down = none

# Graphs (graph patch required)
# this is a default one, need to change
# graphs_items: C for CPU, M for Memory, N for Network
graphs_items = CMN
graphs_use_bars = 0
graphs_graph_width = 25
graphs_netiface = eth0
# first graph colors (blue)
graphs_color0 = #7777FF 100
graphs_color1 = #7777FF  60
# second graph colors (green)
graphs_color2 = #22FF22 100
graphs_color3 = #22FF22  60
# third graph colors (purple)
graphs_color4 = #9900CC 100
graphs_color5 = #9900CC  60
graphs_padding = 10 2 6
graphs_background_id = 2
graphs_lclick_command = urxvt -geometry 100x40 -e htop

# System Tray
systray = 1
systray_padding = 0 4 5
systray_sort = ascending
systray_background_id = 1
systray_icon_size = 16
systray_icon_asb = 70 0 0

# Clock
time1_format = %H:%M:%S
time1_font = droid sans 8
time2_format = 
time2_font = droid sans 6
clock_font_color = #b0b0b0 70
clock_tooltip = %A %d %B %Y
clock_padding = 1 0
clock_background_id = 1
clock_rclick_command = orage

# End of config

