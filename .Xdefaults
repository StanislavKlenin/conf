! urxvt configuration

! scrollbar style - rxvt (default), plain (most compact), next, or xterm
URxvt.scrollstyle: plain
URxvt.scrollBar_right: true

URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! font
! this definition has problems with cyrillic symbols (wrong typeset/size)
!URxvt.font: xft:Terminus:size=14

! XLFD definitions with pixel sizes (work ok with terminus)
URxvt.font:     -*-terminus-medium-r-*-*-32-*-*-*-*-*-iso10646-1
URxvt.boldFont: -*-terminus-bold-r-*-*-32-*-*-*-*-*-iso10646-1


! disable native transparency
URxvt.transparent: false

! disable external compositor transparency: 24 bit depth leaves no room for alpha
! Use the specified colour as the windows background colour [default White]; option -bg.
URxvt.depth: 24
URxvt.background: #002b36

! this alternative works too: 64 bit rgba and set a to ffff
!!URxvt.depth: 64
!!URxvt.background: rgba:0000/2b00/3600/ffff

! Use the specified colour as the windows foreground colour [default Black]; option -fg.
URxvt.foreground: green

!URxvt.cursorColor: #008000

