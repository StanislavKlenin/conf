! urxvt configuration

! scrollbar style - rxvt (default), plain (most compact), next, or xterm
URxvt.scrollstyle: plain
URxvt.scrollBar_right: true

URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! font
! this definition has problems with cyrillic symbols (wrong typeset/size)
!URxvt.font: xft:Terminus:size=14

! XLFD definitions with pixel sizes (work ok with terminus)
URxvt.font:     -*-terminus-medium-r-*-*-14-*-*-*-*-*-iso10646-1
URxvt.boldFont: -*-terminus-bold-r-*-*-14-*-*-*-*-*-iso10646-1

! Use the specified colour as the windows foreground colour [default Black]; option -fg.
URxvt.foreground: green

! external compositor transparency
! Use the specified colour as the windows background colour [default White]; option -bg.
!URxvt.background: [90]#000000
!URxvt.background: [90]#1a1a1a

URxvt.background: #002b36
URxvt.depth: 32
!URxvt.intensityStyles: false

! linux console colors
! black
URxvt.color0  : #000000
URxvt.color8  : #555555
! red
URxvt.color1  : #AA0000
URxvt.color9  : #FF5555
! green
URxvt.color2  : #00AA00
URxvt.color10 : #55FF55
! yellow
URxvt.color3  : #AA5500
URxvt.color11 : #FFFF55
! blue
URxvt.color4  : #0000AA
URxvt.color12 : #5555FF
! magenta
URxvt.color5  : #AA00AA
URxvt.color13 : #FF55FF
! cyan
URxvt.color6  : #00AAAA
URxvt.color14 : #55FFFF
! white
URxvt.color7  : #AAAAAA
URxvt.color15 : #FFFFFF

